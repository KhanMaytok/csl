<h1>Listing providers</h1>

<table>
  <thead>
    <tr>
      <th>Provider type</th>
      <th>Clinic area</th>
      <th>Name</th>
      <th>Doctor</th>
      <th>Ruc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.provider_type %></td>
        <td><%= provider.clinic_area %></td>
        <td><%= provider.name %></td>
        <td><%= provider.doctor %></td>
        <td><%= provider.ruc %></td>
        <td><%= link_to 'Show', provider %></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Provider', new_provider_path %>
