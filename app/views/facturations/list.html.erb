<%= form_tag(list_facturation_path, method: 'get', role: 'form', class: 'form-horizontal') do %>
	<div class="form-group">
	<div class="col-md-9">
		<%= select_tag :insurance, options_for_select(@insurances), class: 'form-control' %>
	</div>
	<div class="col-md-3">
		<%= submit_tag 'Búsqueda por aseguradora', class: 'btn btn-default' %>
		</div>
	</div>
<% end %>

<%= form_tag(list_facturation_path, method: 'get', role: 'form', class: 'form-horizontal') do %>
	<div class="form-group">
	<div class="col-md-9">
		<%= text_field_tag :code, '', class: 'form-control' %>
	</div>
	<div class="col-md-3">
		<%= submit_tag 'Búsqueda por código', class: 'btn btn-default' %>
		</div>
	</div>
<% end %>
<%= form_tag(list_facturation_path, method: 'get', role: 'form', class: 'form-horizontal') do %>
	<div class="form-group">
	<div class="col-md-9">
		<%= text_field_tag :authorization_code, '', class: 'form-control' %>
	</div>
	<div class="col-md-3">
		<%= submit_tag 'Búsqueda por autorización', class: 'btn btn-default' %>
		</div>
	</div>
<% end %>
<div class="table-responsive">
<table class="table  table-striped">
	<thead>
		<tr>
			<td>#</td>
			<td>Número de Factura</td>
			<td>Razón social</td>			
			<td>RUC</td>
			<td>Dirección</td>
			<td>Paciente</td>
			<td>Titular</td>
			<td>Empresa</td>
			<td>Número de orden</td>
			<td>Fecha de emisión</td>
		</tr>
	</thead>
	<tbody>
	<% @pay_documents.each do |p| %>
		<% if p.pay_document_group == 0 or p.pay_document_group.nil? %>
			<tr class="warning">
		<% else %>
			<tr class="success">
		<% end %>
			<td><%= p.id %></td>
			<td><%= link_to p.code, ready_principal_facturation_path(pay_document_id: p.id) %></td>			
			<td><%= p.authorization.patient.insured.insurance.name %></td>
			<td><%= p.authorization.patient.insured.insurance.ruc %></td>
			<td></td>
			<td><%= link_to to_name_i(p.authorization.patient), show_insured_path(id: p.authorization.patient.id) %></td>
			<td><%= to_name_h(p.authorization.patient.insured) %></td>
			<td><%= p.authorization.patient.insured.company.name %></td>
			<td><%= p.authorization.code %></td>
			<td><%= p.emission_date %></td>
		</tr>
	<% end %>
	</tbody>
</table>
</div>
<br>
<center><%= will_paginate @pay_documents, renderer: BootstrapPagination::Rails %></center>
