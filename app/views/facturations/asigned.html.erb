<div class="row">
	<div class="col-md-4">
		<div class="jumbotron">
			<div class="container">
				<div class="list-group">
					<%= link_to 'TABLAS DE FACTURACIÓN', '#', class: "list-group-item active"  %>
					<%= link_to 'Sobre la facturación', ready_principal_facturation_path(pay_document_id: @pay_document.id), class: "list-group-item"  %>
					<%= link_to 'Sobre la prestación', ready_benefit_facturation_path(benefit_id: @pay_document.benefit.id), class: "list-group-item"  %>
					<%= link_to 'Asignación de servicios y productos', ready_asign_facturation_path(pay_document_id: @pay_document.id), class: "list-group-item"  %>
					<%= link_to 'Servicios y productos asignados', ready_asigned_facturation_path(pay_document_id: @pay_document.id), class: "list-group-item list-group-item-info"  %>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<div class="jumbotron">
			<div class="container">
				<h3 class="text-center">Servicios y productos asignados a la factura</h3>
				<h4>Tabla de servicios asignados</h4>
				<table class="table">
					<thead>
					<tr>
						<td>Código</td>
						<td>Nombre</td>
						<td>Cantidad</td>
						<td>Unitario</td>
						<td>Monto</td>
						<td>Copago</td>
						<td>Correlativo</td>
					</tr>
						
					</thead>
					<tbody>
						<% @detail_services.each do |d| %>
						<tr>
							<td><%= d.service_code  + ' ' + d.id.to_s%></td>
							<% if d.service_code == '50.01.01' or d.service_code == '50.02.03' or d.service_code == '50.02.06' %>
							<td><%= link_to Service.where(code: d.service_code).last.name, ready_coverage_path(id: PurchaseCoverageService.find(d.index).insured_service.id) %></td>
							<% else %>
							<td><%= link_to Service.where(code: d.service_code).last.name, new_sales_ready_path(id_sale: PurchaseInsuredService.find(d.index).insured_service.id) %></td>
							<% end %>
							<td><%= d.quantity %></td>
							<td><%= d.unitary.round(2) %></td>
							<td><%= d.amount %></td>
							<td><%= d.copayment %></td>
							<td><%= d.correlative %></td>
						</tr>							
						<% end %>						
					</tbody>
				</table>

				<h4>Tabla de productos asignados</h4>
				<table class="table">
					<thead>
					<tr>
						<td>Código</td>
						<td>Nombre</td>
						<td>Monto</td>
						<td>Copago</td>
						<td>Correlativo</td>
					</tr>
						
					</thead>
					<tbody>
						<% @detail_pharmacies.each do |d| %>
						<tr>							
							<% if d.digemid_code == ' '*6 %>
							<td>000</td>
							<td><%= PurchaseInsuredPharmacy.where(id: d.index).first.name %></td>
							<% else %>
							<td><%= d.digemid_code %> <%= d.id %></td>
							<td><%= DigemidProduct.where(code: d.digemid_code).last.name %></td>
							<% end %>
							<td><%= d.amount %></td>
							<td><%= d.copayment %></td>
							<td><%= d.correlative %></td>
						</tr>							
						<% end %>						
					</tbody>
				</table>
				<% if @pay_document.is_closed %>
					<%= form_tag(close_facture_path, method: 'post') do %>
						<%= hidden_field_tag :pay_document_id, @pay_document.id %>
						<%= submit_tag 'Recalcular Factura', class: 'btn btn-success' %>
					<% end %>
				<% else %>
					<%= form_tag(close_facture_path, method: 'post') do %>
						<%= hidden_field_tag :pay_document_id, @pay_document.id %>
						<%= submit_tag 'Cerrar Factura', class: 'btn btn-success' %>
					<% end %>
				<% end %>
				<br>
				<div class="row">
				<div class="container">
				<div class="col-md-4">
				<%= form_tag(update_amount_path, method: 'post', role: 'form') do %>
					<%= hidden_field_tag :pay_document_id, @pay_document.id %>
					<div class="form-group">
						<%= label_tag :net_amount, 'Monto Neto' %>
						<%= text_field_tag :net_amount, @pay_document.net_amount, class: 'form-control' %>
					</div>
					<%= submit_tag 'Corregir monto neto', class: 'btn btn-warning' %>
				<% end %>
				</div>
				<div class="col-md-4">
				<%= form_tag(update_amount_path, method: 'post', role: 'form') do %>
					<%= hidden_field_tag :pay_document_id, @pay_document.id %>
					<div class="form-group">
						<%= label_tag :net_amount, 'Copago Variable' %>
						<%= text_field_tag :net_amount, @pay_document.benefit.cop_var, class: 'form-control' %>
					</div>
					<%= submit_tag 'Corregir copago varaible', class: 'btn btn-warning' %>
				<% end %>
				</div>
				</div>
				</div>
			</div>
		</div>
	</div>
</div>

