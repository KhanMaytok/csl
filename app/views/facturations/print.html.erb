
<div id="print">
	<div class="row">
		<div class="col-md-4">
			<%= label :social, 'Razón social' %>
			<%= @pay_document.social %>
			<br>
			<%= label :ruc, 'RUC' %>
			<%= @pay_document.insurance_ruc %>
			<br>
			<%= label :code, 'Dirección' %>
			<%= @pay_document.direction %>
			<br>
			<%= label :code, 'Paciente' %>
			<%= to_name_i(@insured.patient) %>
			<br>
			<%= label :code, 'Titular' %>
			<%= to_name_h(@insured) %>
			<br>
		</div>
		<div class="col-md-4">
			
			<%= label :ruc, 'RUC' %>
			<%= @insurance.ruc %>
			<br>
			<%= label :code, 'Número de orden' %>	
			<%= @pay_document.authorization.code %>	
			<br>			
			<%= label :code, 'Fecha de emisión' %>
			<%= @pay_document.emission_date %>
		</div>
		<div class="col-md-4">
			<br>
			<br>		
			<%= label :code, 'Número de Factura' %>
				<%= @pay_document.code %>
			<br>			
			<%= label :code, 'Empresa' %>
			<%= @insured.company.name %>
			<br>
		</div>
		<div class="row">
			<table class="table table-condensed">
				<thead>
					<tr>
						<td>Código</td>
						<td>Descripción</td>
						<td>Cantidad</td>
						<td>Unitario</td>
						<td>Importe Total</td>
					</tr>
				</thead>
				<tbody>
					<% if @detail_services.exists? %>
						<% @detail_services.each do |d| %>
							<tr>
								<td><%= d.service_code %></td>
								<% if d.service_description.length < 30 %>
									<td><%= d.service_description + " "*(30 - d.service_description.length) %></td>
								<% else %>
									<td><%= d.service_description[0,30] %></td>
								<% end %>
								<td><%= d.quantity.to_s %></td>
								<td><%= d.unitary.to_s %></td>
								<td><%= ("%.2f" % d.amount).to_s %></td>
							</tr>
						<% end %>
					<% end %>
					<% if @pay_document.benefit.detail_pharmacies.exists? %>					
						<tr>
							<td>Farmacia</td>
							<td>Gastos de farmacia</td>
							<td></td>
							<td></td>
							<td><%= ("%.2f" % @total_pharmacies.round(2)).to_s %></td>
						</tr>
					<% end %>
						<tr>
							<td colspan="3"></td>
							<td>Copago fijo</td>
							<td><%= ("%.2f" % @pay_document.total_cop_fijo).to_s %></td>
						</tr>
						<tr>
							<td colspan="3"></td>
							<td>Copago variable</td>
							<td><%= ("%.2f" % @pay_document.total_cop_var).to_s %></td>
						</tr>
						<tr>
							<td colspan="3"></td>
							<td>Subtotal</td>
							<td><%= ("%.2f" % @pay_document.net_amount).to_s %></td>
						</tr>
						<tr>
							<td colspan="3"></td>
							<td>IGV</td>
							<td><%= ("%.2f" % @pay_document.total_igv).to_s %></td>
						</tr>
						<tr>
							<td colspan="3"></td>
							<td>Total</td>
							<td><%= ("%.2f" % @pay_document.total_amount).to_s %></td>
						</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
		
		