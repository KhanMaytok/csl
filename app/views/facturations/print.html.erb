<br>
			<table width="1000" style="font-size:14px;">
				<tbody>
					<% if @detail_services.exists? %>
						<% @detail_services.each do |d| %>
							<tr>
								<td width="80"><%= d.service_code %></td>
								<% if d.service_description.length < 30 %>
									<td width="700"><%= d.service_description + " "*(30 - d.service_description.length) %></td>
								<% else %>
									<td width="700"><%= d.service_description[0,30] %></td>
								<% end %>
								<td width="50"><%= d.quantity.to_s %></td>
								<td width="100"><%= ("%.2f" % d.unitary).to_s %></td>
								<td><%= ("%.2f" % d.amount).to_s %></td>
							</tr>
						<% end %>
					<% end %>
					<% if @pay_document.benefit.detail_pharmacies.exists? %>					
						<tr>
							<td>Farmacia</td>
							<td>Gastos de farmacia</td>
							<td></td>
							<td></td>
							<td><%= ("%.2f" % @total_pharmacies.round(2)).to_s %></td>
						</tr>
					<% end %>
						<% @void.times do%>
							<tr>
								<td width="80"><div style="font-size:10px;">&nbsp; </div></td>
								<td width="700"><div style="font-size:10px;">&nbsp; </div></td>
								<td width="50"><div style="font-size:10px;">&nbsp; </div></td>
								<td width="100"><div style="font-size:10px;">&nbsp; </div></td>
								<td><div style="font-size:10px;">&nbsp; </div></td>
							</tr>
						<% end %>
						<tr>
							<td colspan="2"></td>
							<td colspan="2">Copago fijo</td>
							<td><%= ("%.2f" % @pay_document.total_cop_fijo).to_s %></td>
						</tr>
						<tr>
							<td colspan="2 "></td>
							<td colspan="2">Copago variable</td>
							<td><%= ("%.2f" % @pay_document.total_cop_var).to_s %></td>
						</tr>
						<tr>
							<td colspan="2"></td>
							<td colspan="2">Subtotal</td>
							<td><%= ("%.2f" % @pay_document.net_amount).to_s %></td>
						</tr>
						<tr>
							<td colspan="2"></td>
							<td colspan="2">IGV</td>
							<td><%= ("%.2f" % @pay_document.total_igv).to_s %></td>
						</tr>
						<tr>
							<td colspan="2">
								SON : <%= @words %> Y <%= @decimal_words %>/100 NUEVOS SOLES
							</td>
							<td colspan="2">Total</td>
							<td><%= ("%.2f" % @pay_document.total_amount).to_s %></td>
						</tr>
				</tbody>
			</table>