	</tr>
	<tr>
		<td>
			&nbsp;&nbsp;&nbsp;
		</td>		
		<td width="450">
			<%= @pay_document.social %>	
		</td>
		<td width="250"></td>
		<td width="200"></td>
	</tr>
	<tr>
		<td>
			
		</td>
		<td>
			<%= @pay_document.direction %>	
		</td>
		<td>
			<%= @ruc %>	
		</td>
