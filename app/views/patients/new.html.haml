%h1 Agregar asegurado
.row
  .col-md-8
    = form_tag(create_patients_path, method: 'post', role: 'form') do
      %h3 Información de asegurado
      .form-group
        .row
          .col-md-5
            = label_tag :company_id, 'Compañía'
            #select_companies
              = render 'select_companies'
          .col-md-7
            = link_to '¿No se encuentra la compañía? Regístrala.', open_company_path, remote: true
      .form-group
        .row
          .col-md-5
            = label_tag :insurance_id, 'Aseguradora'
            = select_tag :insurance_id, options_for_select(@insurances), class: 'form-control', prompt: 'Seleccione una aseguradora'
      .form-group
        .row
          .col-md-5
            = label_tag :afiliation_type_id, 'Tipo de afiliación'
            = select_tag :afiliation_type_id, options_for_select(@afiliation_types),prompt: 'Seleccione un tipo de afiliación',  class: 'form-control'
      .form-group
        = text_field_tag :insured_code, '', {placeholder: 'Código de asegurado', class: 'form-control'}
      .form-group
        = text_field_tag :holder_name, '', {placeholder: 'Nombre de Titular', class: 'form-control'}
      .form-group
        = text_field_tag :holder_paternal, '', {placeholder: 'Apellido paterno titular', class: 'form-control'}
      .form-group
        = text_field_tag :holder_maternal, '', {placeholder: 'Apellido materno titular', class: 'form-control'}
      .form-group
        .row
          .col-md-5
            = label_tag :relation_ship_id, 'Tipo de relación con respecto a titular'
            = select_tag :relation_ship_id, options_for_select(@relation_ships), class: 'form-control', prompt: 'Seleccione un tipo de relación'
      %h3 Información personal
      .form-group
        .row
          .col-md-5
            = label_tag :sex, 'Fecha de Nacimiento'
            = select_tag :sex, options_for_select(@sex), class: 'form-control', prompt: 'Seleccione el sexo'
      .form-group
        = text_field_tag :name, '', {placeholder: 'Nombre', class: 'form-control'}
      .form-group
        = text_field_tag :paternal, '', {placeholder: 'Apellido Paterno', class: 'form-control'}
      .form-group
        = text_field_tag :maternal, '', {placeholder: 'Apellido Materno', class: 'form-control'}
      .form-group
        = text_field_tag :document_identity_code, '', {placeholder: 'Número de documento de identidad', class: 'form-control'}
      .form-group
        = text_field_tag :phone, '', {placeholder: 'Teléfono de referencia', class: 'form-control'}
      .form-group
        = label_tag :birthday, 'Fecha de Nacimiento'
        = date_field_tag :birthday, '', {placeholder: 'Código de asegurado', class: 'form-control'}
      .form-group
        = submit_tag 'Registrar', class: 'btn btn-primary'
  .col-md-4
    #form_company
