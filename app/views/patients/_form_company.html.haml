.row
  .col-md-1
  .col-md-10
    = form_tag(create_company_path, method: 'post', role: 'form', remote: true) do
      .form-group
        = label_tag :name, 'Nombre de la empresa'
        = text_field_tag :name, '', {placeholder: 'Nombre de la empresa', class: 'form-control'}
      .form-group
        = label_tag :ruc, 'Ruc de la empresa'
        = text_field_tag :ruc, '', {placeholder: 'Ruc de la empresa', class: 'form-control'}
      .form-group
        = submit_tag 'Registrar', class: 'btn btn-primary text-center col-md-12'
  .col-md-1
