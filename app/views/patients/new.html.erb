<h1>Agregar asegurado</h1>
<div class="row">
	<div class="col-md-8">
		<%= form_tag('some', method: 'post', role: 'form') do %>
			<div class="form-group">
			<div class="row">
				<div class="col-md-5">
					<%= select_tag :insurance_id, options_for_select(@insurances), class: 'form-control' %>
				</div>
			</div>
				
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-5">
						<%= select_tag :company_id, options_for_select(@companies), class: 'form-control' %>
					</div>
					<div class="col-md-7">
						<%= link_to '¿No se encuentra? Regístralo.', '#' %>
					</div>				
				</div>
				
			</div>
			<div class="form-group">			
					<%= text_field_tag :name, '', {placeholder: 'Nombre', class: 'form-control'} %>
			</div>
			<div class="form-group">
					<%= text_field_tag :paternal, '', {placeholder: 'Apellido Paterno', class: 'form-control'} %>
			</div>
			<div class="form-group">
					<%= text_field_tag :maternal, '', {placeholder: 'Apellido Materno', class: 'form-control'} %>
			</div>
			<div class="form-group">
				<%= text_field_tag :document_identity_code, '', {placeholder: 'Número de documento de identidad', class: 'form-control'} %>
			</div>
			<div class="form-group">
				<%= text_field_tag :insured_code, '', {placeholder: 'Código de asegurado', class: 'form-control'} %>
			</div>
			
			<div class="form-group">
				<%= label_tag :birthday, 'Fecha de Nacimiento' %>
				<%= date_field_tag :birthday, '', {placeholder: 'Código de asegurado', class: 'form-control'} %>
			</div>
			<div class="form-group"></div>

			
			<div class="form-group">
				<%= submit_tag 'Registrar', class: 'btn btn-primary' %>
			</div>
		<% end %>
	</div>
</div>