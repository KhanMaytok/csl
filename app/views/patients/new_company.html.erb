<h1>Agregar compañía</h1>
<div class="row">
	<div class="col-md-6">
		<%= form_tag('some', method: 'post', role: 'form') do %>
			<div class="form-group">
				<div class="row">
					<div class="col-md-7">
						<%= link_to '¿No se encuentra la compañía? Regístrala.', '#' %>
						
					</div>				
				</div>
				
			</div>
			<div class="form-group">
				<%= text_field_tag :insured_code, '', {placeholder: 'Código de asegurado', class: 'form-control'} %>
			</div>
			
			<div class="form-group">
				<%= label_tag :birthday, 'Fecha de Nacimiento' %>
				<%= date_field_tag :birthday, '', {placeholder: 'Código de asegurado', class: 'form-control'} %>
			</div>
			<div class="form-group"></div>

			
			<div class="form-group">
				<%= submit_tag 'Registrar', class: 'btn btn-primary' %>
			</div>
		<% end %>
	</div>
	<div class="col-md-6">
		<%= select_tag :asd, options_for_select(@companies),  {size: 30, multiple: true, class: 'form-control'} %>
	</div>
</div>